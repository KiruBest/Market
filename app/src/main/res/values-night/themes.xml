<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Magazine" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TopToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextViewMain">
        <item name="android:textColor">@color/base_text_color_night</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_marginStart">@dimen/base_text_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/base_text_end_margin</item>
    </style>

    <style name="BigButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/button_without_curve</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_bottom_menu</item>
        <item name="colorControlHighlight">@color/big_button_color</item>
    </style>

    <style name="BottomMenuStyle" parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/pink_color_primary</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/big_text_size</item>
    </style>

    <style name="ButtonBackStyle" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:background">@null</item>
        <item name="iconTint">@color/delete_background</item>
    </style>
</resources>